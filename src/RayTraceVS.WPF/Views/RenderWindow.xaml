<Window x:Class="RayTraceVS.WPF.Views.RenderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="レンダリング結果 - RayTraceVS (1920x1080)" 
        SizeToContent="WidthAndHeight"
        Background="Black"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        KeyDown="Window_KeyDown">
    
    <Grid>
        <!-- DirectX レンダリング用のホストパネル -->
        <Border x:Name="RenderPanel" Background="Black">
            <!-- D3D11Imageを使用してDirectXの出力を表示 -->
            <Image x:Name="RenderImage" Width="1920" Height="1080" Stretch="None"/>
        </Border>

        <!-- 情報オーバーレイ -->
        <Border x:Name="InfoOverlay" VerticalAlignment="Top" HorizontalAlignment="Right"
                Margin="10" Background="#80000000" Padding="10" CornerRadius="4">
            <StackPanel>
                <TextBlock x:Name="StatusText" Text="状態: 停止中" Foreground="White" FontSize="12"/>
                <TextBlock x:Name="ResolutionText" Text="解像度: 1920x1080" Foreground="#888888" FontSize="11"/>
                <TextBlock x:Name="ObjectCountText" Text="オブジェクト: 0" Foreground="#888888" FontSize="11"/>
                <TextBlock x:Name="PhotonDebugText" Text="Photon Debug: Off" Foreground="#888888" FontSize="11"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
