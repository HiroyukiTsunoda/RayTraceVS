<Window x:Class="RayTraceVS.WPF.Views.RenderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="レンダリング結果 - RayTraceVS" 
        Height="720" Width="1280"
        Background="Black"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    
    <Grid>
        <!-- DirectX レンダリング用のホストパネル -->
        <Border x:Name="RenderPanel" 
                Background="Black"
                ClipToBounds="True">
            <!-- D3D11Imageを使用してDirectXの出力を表示 -->
            <Image x:Name="RenderImage" Stretch="Uniform"/>
        </Border>

        <!-- 情報オーバーレイ -->
        <Border VerticalAlignment="Top" HorizontalAlignment="Right"
                Margin="10" Background="#80000000" Padding="10">
            <StackPanel>
                <TextBlock x:Name="StatusText" Text="状態: 停止中" Foreground="White" FontSize="14"/>
                <TextBlock x:Name="ResolutionText" Text="解像度: 1280x720" Foreground="White" FontSize="14"/>
                <TextBlock x:Name="ObjectCountText" Text="オブジェクト: 0" Foreground="White" FontSize="14"/>
            </StackPanel>
        </Border>

        <!-- コントロールパネル -->
        <Border VerticalAlignment="Bottom" HorizontalAlignment="Center"
                Margin="10" Background="#80000000" Padding="10">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="StartButton" Content="開始" Width="80" Height="30" 
                        Margin="5" Click="Start_Click"/>
                <Button x:Name="StopButton" Content="停止" Width="80" Height="30" 
                        Margin="5" Click="Stop_Click" IsEnabled="False"/>
                <Button x:Name="SaveButton" Content="保存" Width="80" Height="30" 
                        Margin="5" Click="Save_Click"/>
                <ComboBox x:Name="ResolutionCombo" Width="120" Height="30" 
                          Margin="5" SelectedIndex="0"
                          SelectionChanged="Resolution_Changed">
                    <ComboBoxItem>1280x720</ComboBoxItem>
                    <ComboBoxItem>1920x1080</ComboBoxItem>
                    <ComboBoxItem>2560x1440</ComboBoxItem>
                    <ComboBoxItem>3840x2160</ComboBoxItem>
                </ComboBox>
            </StackPanel>
        </Border>
    </Grid>
</Window>
