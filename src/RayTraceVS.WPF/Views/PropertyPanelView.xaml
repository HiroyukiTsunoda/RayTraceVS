<UserControl x:Class="RayTraceVS.WPF.Views.PropertyPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">
            <TextBlock Text="プロパティ" 
                       FontSize="16" FontWeight="Bold" 
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,0,0,10"/>

            <Border BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="1" 
                    Padding="10"
                    Background="#252526">
                <StackPanel>
                    <StackPanel x:Name="EmptyState" 
                                Visibility="{Binding SelectedNode, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock Text="ノードを選択してください" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="0,20"/>
                    </StackPanel>
                    
                    <StackPanel x:Name="PropertyContent"
                                Visibility="{Binding SelectedNode, Converter={StaticResource NotNullToVisibilityConverter}}">
                        <!-- ノード名 -->
                        <TextBlock Text="{Binding SelectedNode.Title}" 
                                   FontSize="14" FontWeight="Bold" 
                                   Foreground="{StaticResource TextBrush}"
                                   Margin="0,0,0,10"/>
                        
                        <!-- ノードタイプ -->
                        <TextBlock Text="タイプ" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="10"
                                   Margin="0,5,0,2"/>
                        <TextBlock Text="{Binding SelectedNode.Category}" 
                                   Foreground="{StaticResource TextBrush}"
                                   Margin="0,0,0,10"/>
                        
                        <!-- 位置 -->
                        <TextBlock Text="位置" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="10"
                                   Margin="0,5,0,2"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="X: " Foreground="{StaticResource TextBrush}"/>
                            <TextBlock Text="{Binding SelectedNode.Position.X, StringFormat=F0}" 
                                       Foreground="{StaticResource TextBrush}"
                                       Margin="0,0,10,0"/>
                            <TextBlock Text="Y: " Foreground="{StaticResource TextBrush}"/>
                            <TextBlock Text="{Binding SelectedNode.Position.Y, StringFormat=F0}" 
                                       Foreground="{StaticResource TextBrush}"/>
                        </StackPanel>
                        
                        <!-- 入力ソケット -->
                        <TextBlock Text="入力" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="10"
                                   Margin="0,15,0,5"/>
                        <ItemsControl ItemsSource="{Binding SelectedNode.InputSockets}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                        <Ellipse Width="8" Height="8" 
                                                 Fill="{StaticResource AccentBrush}"
                                                 Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding Name}" 
                                                   Foreground="{StaticResource TextBrush}"
                                                   FontSize="11"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <!-- 出力ソケット -->
                        <TextBlock Text="出力" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="10"
                                   Margin="0,15,0,5"/>
                        <ItemsControl ItemsSource="{Binding SelectedNode.OutputSockets}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                        <Ellipse Width="8" Height="8" 
                                                 Fill="{StaticResource AccentBrush}"
                                                 Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding Name}" 
                                                   Foreground="{StaticResource TextBrush}"
                                                   FontSize="11"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <!-- 削除ボタン -->
                        <Button Content="ノードを削除" 
                                Click="DeleteNode_Click"
                                Margin="0,20,0,0"
                                Padding="10,5"
                                Background="#C62828"
                                Foreground="White"
                                BorderThickness="0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
