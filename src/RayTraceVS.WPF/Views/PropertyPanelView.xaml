<UserControl x:Class="RayTraceVS.WPF.Views.PropertyPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:nodes="clr-namespace:RayTraceVS.WPF.Models.Nodes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="300">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="10">
            <TextBlock Text="プロパティ" 
                       FontSize="16" FontWeight="Bold" 
                       Foreground="{StaticResource TextBrush}"
                       Margin="0,0,0,10"/>

            <Border BorderBrush="{StaticResource BorderBrush}" 
                    BorderThickness="1" 
                    Padding="10"
                    Background="#252526">
                <StackPanel>
                    <StackPanel x:Name="EmptyState" 
                                Visibility="{Binding SelectedNode, Converter={StaticResource NullToVisibilityConverter}}">
                        <TextBlock Text="ノードを選択してください" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="0,20"/>
                    </StackPanel>
                    
                    <StackPanel x:Name="PropertyContent"
                                Visibility="{Binding SelectedNode, Converter={StaticResource NotNullToVisibilityConverter}}">
                        <!-- ノード名 -->
                        <TextBlock Text="{Binding SelectedNode.Title}" 
                                   FontSize="14" FontWeight="Bold" 
                                   Foreground="{StaticResource TextBrush}"
                                   Margin="0,0,0,10"/>
                        
                        <!-- ノードタイプ -->
                        <TextBlock Text="タイプ" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="10"
                                   Margin="0,5,0,2"/>
                        <TextBlock Text="{Binding SelectedNode.Category}" 
                                   Foreground="{StaticResource TextBrush}"
                                   Margin="0,0,0,10"/>
                        
                        <!-- 入力ソケット -->
                        <TextBlock Text="入力" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="10"
                                   Margin="0,15,0,5"/>
                        <ItemsControl ItemsSource="{Binding SelectedNode.InputSockets}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                        <Ellipse Width="8" Height="8" 
                                                 Fill="{StaticResource AccentBrush}"
                                                 Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding Name}" 
                                                   Foreground="{StaticResource TextBrush}"
                                                   FontSize="11"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <!-- 出力ソケット -->
                        <TextBlock Text="出力" 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   FontSize="10"
                                   Margin="0,15,0,5"/>
                        <ItemsControl ItemsSource="{Binding SelectedNode.OutputSockets}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,2">
                                        <Ellipse Width="8" Height="8" 
                                                 Fill="{StaticResource AccentBrush}"
                                                 Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding Name}" 
                                                   Foreground="{StaticResource TextBrush}"
                                                   FontSize="11"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <!-- SceneNode専用プロパティ -->
                        <StackPanel Margin="0,15,0,0">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedNode, Converter={StaticResource TypeNameConverter}}" Value="SceneNode">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            
                            <TextBlock Text="レンダリング設定" 
                                       Foreground="{StaticResource AccentBrush}"
                                       FontWeight="Bold"
                                       FontSize="12"
                                       Margin="0,0,0,10"/>
                            
                            <!-- SamplesPerPixel -->
                            <TextBlock Text="サンプル数 (SamplesPerPixel)" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="10"
                                       Margin="0,5,0,2"/>
                            <TextBox Text="{Binding SelectedNode.SamplesPerPixel, UpdateSourceTrigger=PropertyChanged}"
                                     Background="#3C3C3C"
                                     Foreground="{StaticResource TextBrush}"
                                     BorderBrush="{StaticResource BorderBrush}"
                                     Padding="5,3"
                                     Margin="0,0,0,5"/>
                            <TextBlock Text="1: プレビュー / 4-8: 高品質 / 16+: 最高品質" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="9"
                                       Margin="0,0,0,10"/>
                            
                            <!-- MaxBounces -->
                            <TextBlock Text="最大反射回数 (MaxBounces)" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="10"
                                       Margin="0,5,0,2"/>
                            <TextBox Text="{Binding SelectedNode.MaxBounces, UpdateSourceTrigger=PropertyChanged}"
                                     Background="#3C3C3C"
                                     Foreground="{StaticResource TextBrush}"
                                     BorderBrush="{StaticResource BorderBrush}"
                                     Padding="5,3"
                                     Margin="0,0,0,5"/>
                            <TextBlock Text="ガラス/メタルの反射・屈折の最大回数" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="9"
                                       Margin="0,0,0,10"/>
                        </StackPanel>
                        
                        <!-- CameraNode専用プロパティ -->
                        <StackPanel Margin="0,15,0,0">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedNode, Converter={StaticResource TypeNameConverter}}" Value="CameraNode">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            
                            <TextBlock Text="被写界深度 (DoF)" 
                                       Foreground="{StaticResource AccentBrush}"
                                       FontWeight="Bold"
                                       FontSize="12"
                                       Margin="0,0,0,10"/>
                            
                            <!-- ApertureSize -->
                            <TextBlock Text="絞りサイズ (ApertureSize)" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="10"
                                       Margin="0,5,0,2"/>
                            <TextBox Text="{Binding SelectedNode.ApertureSize, UpdateSourceTrigger=PropertyChanged, Delay=500}"
                                     Background="#3C3C3C"
                                     Foreground="{StaticResource TextBrush}"
                                     BorderBrush="{StaticResource BorderBrush}"
                                     Padding="5,3"
                                     Margin="0,0,0,5"/>
                            <TextBlock Text="0: DoF無効 / 0.05-0.2: 弱いボケ / 0.5+: 強いボケ" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="9"
                                       Margin="0,0,0,10"/>
                            
                            <!-- FocusDistance -->
                            <TextBlock Text="焦点距離 (FocusDistance)" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="10"
                                       Margin="0,5,0,2"/>
                            <TextBox Text="{Binding SelectedNode.FocusDistance, UpdateSourceTrigger=PropertyChanged, Delay=500}"
                                     Background="#3C3C3C"
                                     Foreground="{StaticResource TextBrush}"
                                     BorderBrush="{StaticResource BorderBrush}"
                                     Padding="5,3"
                                     Margin="0,0,0,5"/>
                            <TextBlock Text="ピントが合う距離（カメラからの距離）" 
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       FontSize="9"
                                       Margin="0,0,0,10"/>
                        </StackPanel>
                        
                        <!-- 削除ボタン -->
                        <Button Content="ノードを削除" 
                                Click="DeleteNode_Click"
                                Margin="0,20,0,0"
                                Padding="10,5"
                                Background="#C62828"
                                Foreground="White"
                                BorderThickness="0"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
